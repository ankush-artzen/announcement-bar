<div class="custom-banner" style="background-color: {{ block.settings.bg_color }}; color: {{ block.settings.text_color }}; padding: 20px; text-align: center;">
  <h2 style="margin: 0 0 10px;  color: {{ block.settings.text_color }};">{{ block.settings.title }}</h2>
  {% if block.settings.link %}
    <a href="{{ block.settings.link }}" class="banner-button" style="display: inline-block; background: #000; color: #fff; padding: 10px 16px; text-decoration: none; border-radius: 6px;">
      {{ block.settings.button_label }}
    </a>
  {% endif %}
</div>

{% schema %}
{
  "name": "Banner Block",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Banner Title",
      "default": "Welcome to our store!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Banner Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ]
}
{% endschema %}
